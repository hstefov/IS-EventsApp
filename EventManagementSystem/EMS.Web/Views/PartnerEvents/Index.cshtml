@model List<EMS.Domain.DTO.PartnerEventDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    <div class="d-flex justify-content-between">
        <h1 class="fs-1">Partner events</h1>
    </div>
    <hr />

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 3 == 0)
        {
            @:<div class="row d-flex justify-content-center">
        }
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 m-4">

            <div class="card bg-light bg-gradient bg-opacity-75 border-1" style="width: 18rem; height: 23rem">
                <img style="max-height:12rem; object-fit:cover" class="card-img-top" src="@item.DefaultImageURL" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Event: @item.Name</h5>
                     <h5 class="card-title">Location: @item.Location</h5>
                </div>
                <div class="card-footer ">
                    <div class="text-center">
                        <a asp-controller="PartnerEvents" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </div>
                </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }