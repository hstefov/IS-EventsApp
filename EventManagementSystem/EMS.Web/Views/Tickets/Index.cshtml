@model List<EMS.Domain.Models.Ticket>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    <div class="d-flex justify-content-between">
        <p class="fs-1">Tickets</p>
        <div class="m-3">
            <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Ticket</a>
        </div>
    </div>
    <hr />

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 3 == 0)
        {
            @:<div class="row d-flex justify-content-center">
        }
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 m-4">

            <div class="card" style="width: 18rem; height: 25rem">
                <img style="max-height:12rem; object-fit:cover" class="card-img-top" src="@item.ScheduledEvent.Event.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Event: @item.ScheduledEvent.Event.EventName</h5><br />
                    <h6 class="card-title">Host: @item.ScheduledEvent.Event.HostName</h6>
                    <h6 class="card-title">Price: @item.Price$</h6>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="Tickets" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-warning">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }