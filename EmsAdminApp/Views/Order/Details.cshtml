@model EmsAdminApp.Models.Order

<div class="container">
    <div>
        <p>Order for @Model.UserAttendee.Email</p>
    </div>

    @for(int i=0;i<Model.TicketsInOrder.Count(); i++)
    {
        var item = Model.TicketsInOrder.ElementAt(i).Ticket;
        var quantity = Model.TicketsInOrder.ElementAt(i).Quantity;
        var totalPrice = 0.0;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.ScheduledEvent.ImageURL" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.ScheduledEvent.Location</h5>
                    <p class="card-text">@item.ScheduledEvent.TimeSlot</p>
                    @{totalPrice = quantity * item.Price;}
                    <h6>Price: $ @totalPrice </h6>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>